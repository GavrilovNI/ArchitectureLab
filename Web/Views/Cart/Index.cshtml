@model CartIndexData

@using System.Globalization
@using Web.Data.Models
@using Web.ViewData


@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<script src="~/js/CartFunctions.js"></script>
<link href="~/css/ProductStyle.css" rel="stylesheet" type="text/css" />

<style>
	.all-price {
		text-align: center;
	}
	.all-price a {
		font-size: 24px;
	}
</style>

<div class="all-price">
	<a>
		@{
			float totalPrice = 0;
			foreach(ProductInfo cartItemInfo in Model!.Products) {
				totalPrice += cartItemInfo.TotalPrice;
			}
		}
		Total: @totalPrice.ToString("c", CultureInfo.CreateSpecificCulture("ru-RU"))
	</a>
</div>
<div class="row mt-5 mb-2">
	@{
		foreach(ProductInfo cartItemInfo in Model.Products) {
			@Html.Partial("_ProductPartial", cartItemInfo);
		}
	}
</div>