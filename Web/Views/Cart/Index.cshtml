@using Web.Data.Models
@model IEnumerable<ProductInfo>
<style>
	.all-price
	{
		text-align: center;
	}
	.all-price a {
		font-size: 24px;
	}
</style>
<div class="all-price">
	<a>
		Subtotal: $$(Тут нужно добавить общую сумму всех товаров)
	</a>
</div>
<div class="row mt-5 mb-2">
	@{
		foreach(ProductInfo cartItemInfo in Model) {
			@Html.Partial("_ProductPartial", cartItemInfo)
		}
	}
</div>