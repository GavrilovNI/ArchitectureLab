@using System.Globalization
@using Web.Data.Models
@model Product


@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
	<div class="col-lg-4">
		<img class="img-thumbnail" src="@Model.LinkToImage" alt="@Model.Name" />
		<h2>@Model.Name</h2>
		<p>@Model.Description</p>
		<p>Left @Model.AvaliableAmount</p>
		<p>Price: @Model.Price.ToString("c", CultureInfo.CreateSpecificCulture("ru-RU"))</p>
		<a id="addItem" class="nav-link px-2 text-dark" asp-controller="Cart" asp-action="AddItem" asp-route-itemid="@Model.Id">Add</a>
		<a id="removeItem" class="nav-link px-2 text-dark" asp-controller="Cart" asp-action="RemoveItem" asp-route-itemid="@Model.Id">Remove</a>


	</div>
}