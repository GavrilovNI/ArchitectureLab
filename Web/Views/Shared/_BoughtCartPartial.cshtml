@using Web.Data.Models
@model BoughtCart

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
	foreach(BoughtProduct boughtProduct in Model.BoughtProducts) {
		<p>Time: @Model.Time.ToString() UTC</p>
		<p>Address: @Model.DeliveryAddress</p>
		@Html.Partial("_BoughtProductPartial", boughtProduct)
		;
	}
	if(Model.IsEveryItemHasStatus(PaidStatus.NotPaid))
	{
		string idBtnPay = "cart-" + Model.Id + "-paybtn";
		string href = "Order/PayForOrder?cartId=" + Model.Id;
		<a id="idBtnPay" class="nav-link px-2 text-dark" href="@href">Pay</a>
	}
	else if(Model.IsEveryItemHasStatus(PaidStatus.Paid))
	{
		string idBtnPay = "cart-" + Model.Id + "-cancelbtn";
		string href = "Order/CancelOrder?cartId=" + Model.Id;
		<a id="idBtnPay" class="nav-link px-2 text-dark" href="@href">Cancel</a>
	}
}