@using Microsoft.AspNetCore.Identity
@using Web.Areas.Identity.Data

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a id="manage" class="nav-link px-2 text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        
    </li>
    <li class="nav-item">
        <a id="logout" class="nav-link px-2 text-white" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" title="Logout">Logout</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link px-2 text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link px-2 text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
